{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  }
}
